---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for post in site.posts %}
    {% assign current_post = true %}
    {% for category in post.categories %}
      {% if site.data.sitemap.blocked.categories contains category %}
       {% assign current_post = false %}
      {% endif %}
      {% if category == 'private' %}
       {% assign current_post = false %}
      {% endif %}
    {% endfor %}
    {% if post.sitemap != false and current_post != false %}
      <url>
        <loc>{{ site.url }}{{ post.url | remove: 'index.html' }}</loc>
        {% if post.lastmod == null %}
        <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
        {% else %}
        <lastmod>{{ post.lastmod | date_to_xmlschema }}</lastmod>
        {% endif %}
        <changefreq>weekly</changefreq>
        <priority>1.0</priority>
      </url>
    {% endif %}
  {% endfor %}
  {% for page in site.pages %}
    {% if site.data.sitemap.blocked.pages contains page.url or site.data.sitemap.blocked.categories contains page.parent %}
    {% elsif page.sitemap != 'false' %}
    <url>
      <loc>{{ site.url }}{{ page.url | remove:'index.html' }}</loc>
      {% if page.sitemod.lastmod == null %}<lastmod>
        {{ site.time | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ page.sitemap.lastmod | date_to_xmlschema }}</lastmod>
      {% endif %}
      {% if page.sitemap.changefreq == null %}
        <changefreq>monthly</changefreq>
      {% else %}
        <changefreq>{{ page.sitemap.changefreq }}</changefreq>
      {% endif %}
      <priority>1</priority>
    </url>
    {% endif %}
  {% endfor %}
</urlset>
